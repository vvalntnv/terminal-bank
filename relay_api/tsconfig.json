{
	"compilerOptions": {
		"paths": {
			"@/*": [
				"./src/*"
			]
		},
		"outDir": "./dist",
		"rootDir": "./src",
		"emitDeclarationOnly": false,
		"noEmit": false,
		"allowImportingTsExtensions": false,
		"module": "esnext",
		"moduleResolution": "bundler",
		"lib": [
			"esnext"
		],
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true
	},
	"include": [
		"src/**/*"
	]
}
